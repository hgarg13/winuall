<%- include ('./partials/header') -%>
<div class="container flex-row">
	<% if(err) { %>
	<div class="alert alert-danger" style="margin-top: 10px;">
		<strong><%= err %></strong>
	</div>
	<% } else { %>
	<div class="alert alert-success" style="margin-top: 10px;">
		<strong><%= message %></strong>
	</div>
	<%followers.forEach(follower => { %>

	<div class="card mb-3 float-left" style="max-width: 20rem; margin: 20px 50px 0 0;">
		<h3 class="card-header"><%= follower.login %></h3>
		<img class="img-fluid mb-2" src=<%= follower.avatar_url %>>
		<div class="card-body">
			<a target="_blank" class="btn btn-primary btn-block" href=<%= follower.url %>>View Profile</a>
		</div>
	</div>

	<%})%>
	<% } %>
</div>
<%- include('./partials/footer') -%>